{
  "name": "orb-integration-hub",
  "version": "0.1.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:secure": "npm run build:secure:dev && npx serve dist/ -p 4200",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:headless": "cypress run --headless",
    "test:coverage": "ng test --code-coverage && cypress run",
    "perf:load": "artillery run performance-tests/artillery/auth-flow-load-test.yml",
    "perf:stress": "artillery run performance-tests/artillery/stress-test.yml",
    "perf:lighthouse": "lighthouse http://localhost:4200/user/auth --output json --output html --output-path performance-tests/reports/lighthouse-report",
    "perf:lighthouse:mobile": "lighthouse http://localhost:4200/user/auth --preset=perf --form-factor=mobile --output json --output html --output-path performance-tests/reports/lighthouse-mobile-report",
    "perf:memory": "node performance-tests/memory/memory-leak-detector.js",
    "perf:mobile": "node performance-tests/scripts/mobile-performance-test.js",
    "perf:network": "node performance-tests/scripts/network-throttling-test.js",
    "perf:all": "node performance-tests/scripts/performance-test-runner.js",
    "perf:baseline": "npm run perf:all && node performance-tests/scripts/baseline-metrics.js",
    "bundle:analyze": "webpack-bundle-analyzer dist/main*.js",
    "test:integration": "jest integration-tests/**/*.spec.ts --config=integration-tests/jest.config.js",
    "test:integration:watch": "jest integration-tests/**/*.spec.ts --config=integration-tests/jest.config.js --watch",
    "test:integration:cognito": "jest integration-tests/cognito/**/*.spec.ts --config=integration-tests/jest.config.js",
    "test:integration:sms": "jest integration-tests/sms/**/*.spec.ts --config=integration-tests/jest.config.js",
    "test:integration:graphql": "jest integration-tests/graphql/**/*.spec.ts --config=integration-tests/jest.config.js",
    "test:contracts": "jest integration-tests/contracts/**/*.spec.ts --config=integration-tests/jest.config.js",
    "test:contracts:publish": "npm run test:contracts && pact-broker publish integration-tests/pacts --consumer-app-version=$npm_package_version --broker-base-url=$PACT_BROKER_BASE_URL",
    "test:all": "npm run test && npm run test:e2e && npm run test:integration && npm run perf:all",
    "lint": "ng lint",
    "validate:debug": "node scripts/validate-debug-mode.js",
    "build:secure": "npm run build:secure:dev",
    "build:secure:dev": "npm run build:clean && npm run build:angular && npm run secrets:retrieve:dev && npm run secrets:replace:dev",
    "build:secure:staging": "npm run build:clean && npm run build:angular:prod && npm run secrets:retrieve:staging && npm run secrets:replace:staging",
    "build:secure:prod": "npm run build:clean && npm run build:angular:prod && npm run secrets:retrieve:prod && npm run secrets:replace:prod",
    "build:clean": "rm -rf dist/",
    "build:angular": "ng build",
    "build:angular:prod": "ng build --configuration production",
    "secrets:retrieve": "node scripts/secrets-retrieval.js",
    "secrets:retrieve:dev": "node scripts/secrets-retrieval.js dev",
    "secrets:retrieve:staging": "node scripts/secrets-retrieval.js staging",
    "secrets:retrieve:prod": "node scripts/secrets-retrieval.js prod",
    "secrets:replace": "node scripts/replace-secrets.js",
    "secrets:replace:dev": "node scripts/replace-secrets.js dev",
    "secrets:replace:staging": "node scripts/replace-secrets.js staging",
    "secrets:replace:prod": "node scripts/replace-secrets.js prod",
    "test:secrets": "node scripts/test-replace-secrets.js",
    "postbuild:secure": "echo 'Secure build completed successfully!'",
    "setup-dev": "node scripts/setup-dev-env.js dev",
    "setup-staging": "node scripts/setup-dev-env.js staging",
    "setup-prod": "node scripts/setup-dev-env.js prod",
    "cleanup-env": "node scripts/setup-dev-env.js cleanup",
    "ngrok": "node scripts/start-ngrok.js",
    "start:ngrok": "concurrently \"npm start\" \"npm run ngrok\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.18",
    "@angular/build": "^19.2.19",
    "@angular/cdk": "^19.2.18",
    "@angular/common": "^19.2.18",
    "@angular/compiler": "^19.2.18",
    "@angular/core": "^19.2.18",
    "@angular/forms": "^19.2.18",
    "@angular/material": "^19.2.18",
    "@angular/platform-browser": "^19.2.18",
    "@angular/platform-browser-dynamic": "^19.2.18",
    "@angular/router": "^19.2.18",
    "@fortawesome/angular-fontawesome": "^1.0.0",
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@ngrx/effects": "^19.2.1",
    "@ngrx/entity": "^19.2.1",
    "@ngrx/store": "^19.2.1",
    "@ngrx/store-devtools": "^19.2.1",
    "aws-amplify": "^6.6.0",
    "dompurify": "^3.2.6",
    "qrcode": "^1.5.4",
    "rxjs": "^7.8.1",
    "typescript": "^5.6.3",
    "zone.js": "^0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.19",
    "@angular/cli": "^19.2.19",
    "@angular/compiler-cli": "^19.2.18",
    "@aws-sdk/client-secrets-manager": "^3.0.0",
    "@aws-sdk/client-ssm": "^3.0.0",
    "@aws-sdk/credential-provider-sso": "^3.0.0",
    "@types/jasmine": "^5.1.4",
    "@types/qrcode": "^1.5.5",
    "angular-eslint": "20.1.0",
    "artillery": "^2.0.21",
    "chrome-launcher": "^1.2.0",
    "cypress": "^14.5.0",
    "eslint": "^9.22.0",
    "fast-check": "^4.5.3",
    "jasmine-core": "^5.3.0",
    "js-yaml": "^4.1.0",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "lighthouse": "^12.6.1",
    "typescript-eslint": "8.26.0",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
