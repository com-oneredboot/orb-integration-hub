# --------------------------------------------------- #
AWSTemplateFormatVersion: 2010-09-09

# --------------------------------------------------- #
Transform: AWS::Serverless-2016-10-31

# --------------------------------------------------- #
Description: >
 Application Infrastructure - DynamoDB Tables

# --------------------------------------------------- #
Parameters:
  Environment:
    Default: dev
    Type: String
    Description: Environment name (dev, staging, prod)
  CustomerId:
    Default: orb
    Type: String
    Description: Customer identifier
  ProjectId:
    Default: integration-hub
    Type: String
    Description: Project identifier
  TracingIs:
    Default: Active
    Type: String
    Description: Whether tracing is enabled

# --------------------------------------------------- #
Resources:
  {% for schema in schemas.values() %}
  {{ schema.table }}Table:
    Type: AWS::DynamoDB::Table
    Properties:
      TableName: !Sub ${CustomerId}-${ProjectId}-${Environment}-{{ schema.table | to_kebab_case }}
      BillingMode: PAY_PER_REQUEST
      KeySchema:
        - AttributeName: {{ schema.partition_key }}
          KeyType: HASH
        {% if schema.sort_key and schema.sort_key != 'None' %}
        - AttributeName: {{ schema.sort_key }}
          KeyType: RANGE
        {% endif %}
      AttributeDefinitions:
        - AttributeName: {{ schema.partition_key }}
          AttributeType: S
        {% if schema.sort_key and schema.sort_key != 'None' %}
        - AttributeName: {{ schema.sort_key }}
          AttributeType: S
        {% endif %}
        {% if schema.secondary_indexes %}
        {% for index in schema.secondary_indexes %}
        - AttributeName: {{ index.partition }}
          AttributeType: S
        {% if index.sort and index.sort != 'None' %}
        - AttributeName: {{ index.sort }}
          AttributeType: S
        {% endif %}
        {% endfor %}
        {% endif %}
      {% if schema.secondary_indexes %}
      GlobalSecondaryIndexes:
        {% for index in schema.secondary_indexes %}
        - IndexName: {{ index.name }}
          KeySchema:
            - AttributeName: {{ index.partition }}
              KeyType: HASH
            {% if index.sort and index.sort != 'None' %}
            - AttributeName: {{ index.sort }}
              KeyType: RANGE
            {% endif %}
          Projection:
            ProjectionType: {{ index.projection_type }}
            {% if index.projection_type == 'INCLUDE' and index.projected_attributes %}
            NonKeyAttributes:
              {% for attr in index.projected_attributes %}
              - {{ attr }}
              {% endfor %}
            {% endif %}
        {% endfor %}
      {% endif %}

  {{ schema.table }}TableArn:
    Type: AWS::SSM::Parameter
    Properties:
      Name: !Sub ${CustomerId}-${ProjectId}-${Environment}-{{ schema.table | to_kebab_case }}-table-arn
      Type: String
      Value: !GetAtt {{ schema.table }}Table.Arn

  {{ schema.table }}TableName:
    Type: AWS::SSM::Parameter
    Properties:
      Name: !Sub ${CustomerId}-${ProjectId}-${Environment}-{{ schema.table | to_kebab_case }}-table-name
      Type: String
      Value: !Ref {{ schema.table }}Table
  {% endfor %}

# --------------------------------------------------- #
Outputs:
  {% for schema in schemas.values() %}
  {{ schema.table }}TableArn:
    Description: The ARN of the {{ schema.table }} table
    Value: !GetAtt {{ schema.table }}Table.Arn
    Export:
      Name: !Sub ${CustomerId}-${ProjectId}-${Environment}-{{ schema.table | to_kebab_case }}-table-arn

  {{ schema.table }}TableName:
    Description: The name of the {{ schema.table }} table
    Value: !Ref {{ schema.table }}Table
    Export:
      Name: !Sub ${CustomerId}-${ProjectId}-${Environment}-{{ schema.table | to_kebab_case }}-table-name
  {% endfor %}