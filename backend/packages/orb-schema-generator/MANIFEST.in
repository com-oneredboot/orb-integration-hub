# Include package metadata files
include README.md
include LICENSE
include pyproject.toml
include setup.py
include requirements*.txt

# Include all templates
recursive-include src/orb_schema_generator/templates *
recursive-include templates *

# Include configuration files
include src/orb_schema_generator/config/*.yaml
include src/orb_schema_generator/config/*.yml
include src/orb_schema_generator/config/*.toml
include src/orb_schema_generator/config/*.json

# Include documentation
recursive-include docs *.md *.rst *.txt
prune docs/_build

# Include tests for source distributions
recursive-include tests *.py *.yaml *.yml *.json
include tests/conftest.py

# Include examples
recursive-include examples *.py *.yaml *.yml *.md

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.swp
global-exclude .DS_Store
global-exclude __pycache__
global-exclude .git
global-exclude .gitignore
global-exclude .coverage
global-exclude .pytest_cache
global-exclude .mypy_cache
global-exclude .ruff_cache
global-exclude *.egg-info
prune htmlcov
prune .github